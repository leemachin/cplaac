{% extends 'layouts/cplaac.twig' %}

{% block content %}
  <div class='page-header'>
    <h1>Service Directory</h1>
  </div>

  {% if app.user %}
    <div class='row-fluid'>
      <div class="span3 offset9">
        <a class="btn btn-primary" href="/services/new">Add Service</a>
      </div>
    </div>
  {% endif %}

  <div class='row-fluid'>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Service Name</th>
          <th>Address</th>
          <th>Point of Contact</th>
          <th>Telephone</th>
          <th>Email</th>
        </tr>
      </thead>

      <tbody>
        {% for service in services %}
          <tr>
            <td><a href="/services/{{service.id}}" title="More information about {{ service.service_name }}">{{ service.service_name }}</a></td>
            <td>{{ service.address }}</td>
            <td>{{ service.contact_name }}</td>
            <td><a href="tel://{{ service.contact_phone }}">{{ service.contact_phone }}</a></td>
            <td><a href="mailto:{{ service.contact_email }}">{{ service.contact_email }}</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
