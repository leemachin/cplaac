{% extends 'layouts/resource-exchange.twig' %}
{% import 'macros/tables.twig' as tables %}

{% block profile_title %}
  Most Recent Resources
{% endblock %}

{% block profile_text %}
  These are the latest resources to be shared by other members of the community. Keep checking back to see what becomes available!
{% endblock %}

{% block inner_content %}
  {% if files %} 
    {{ tables.file_list(files) }}

  {% else %}
    <div class='alert alert-info'>
      <strong>Nothing to see here!</strong> No files have been uploaded yet. <a href='/exchange/upload'>Be the first to share!</a>
    </div>
  {% endif %}
{% endblock %}