{% extends 'layouts/resource-exchange.twig' %}
{% import 'macros/tables.twig' as tables %}

{% block profile_title %}
  Browsing
{% endblock %}

{% block profile_text %}
  Browse through all the resources that have been shared by other members.
{% endblock %}

{% block inner_content %}
  {% if files %} 
    {{ tables.file_list(files) }}

  {% else %}
    <div class='alert alert-info'>
      <strong>Nothing to see here!</strong> No files have been uploaded yet. <a href='/exchange/upload'>Be the first to share!</a>
    </div>
  {% endif %}
{% endblock %}