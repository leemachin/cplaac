{% extends 'layouts/minimal.twig' %}

{% block inner_content %}
  <div class='page-header'>
    <h1>log in</h1>
  </div>

  <form action='/login' method='POST'>
    <input type='hidden' name='redirect' value='{{ app.session.get('last_page', app.last_page) }}'>

    <div class='control-group'>
      <label for='username'>username</label>
      <input type='text' name='username' class='span12' id='username' required>
    </div>

    <div class='control-group'>
      <label for='password'>password</label>
      <input type='password' name='password' class='span12' required>
    </div>

    <div class='control-group'>
      <div class='controls'>
        <label class='checkbox'><input type='checkbox' name='autologin'> keep me logged in</label>
        <span class='help-block'><strong>do not</strong> check this if you're on a public computer</span>
      </div>
    </div>

    <div class='form-actions clearfix'>
      <a href='{{ app.last_page }}' class='btn btn-secondary btn-large'>cancel</a>
      <input type='submit' name='login' value='log in' class='btn btn-primary btn-large'>
    </div>
  </form>
{% endblock %}